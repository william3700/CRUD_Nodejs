<h1>Edición productos</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 offset-md-3 card">
        <div class="card-body">
        <form action="/updateProductos/<%= data.id %>" method="POST">
        <div class="form-group">
        <input type="text" name="nombre" value="<%= data.nombre%>" placeholder="Name" class="form-control" autofocus>
        </div>
        <div class="form-group">
        <input type="text" name="descripcion" value="<%= data.descripcion%>" placeholder="Descripción" class="form-control">
        </div>
        <div class="form-group">
        <input type="text" name="cantidad" value="<%= data.cantidad%>" placeholder="Cantidad" class="form-control">
        </div>
        <div class="form-group">
            <input type="text" name="costo" value="<%= data.costo%>" placeholder="Costo" class="form-control">
            </div>
        <button type="submit" class="btn btn-primary">
        Editar
        </button>
        </form>
        </div>
        </div>
        </div>
